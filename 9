9.Develop an android application to read student details like
Name,USN and Semester in first activity and display the same in
second activity,(Use redios button to select semester).


MainActivity.java

package com.example.app9;

import androidx.appcompat.app.AppCompatActivity;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.RadioButton;
import android.widget.RadioGroup;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        Button send_button = (Button) findViewById(R.id.send);
        EditText send_name = (EditText) findViewById(R.id.yourName);
        EditText send_usn = (EditText) findViewById(R.id.yourUsn);
        RadioGroup radioGroup = (RadioGroup) findViewById(R.id.radioGroup);

        send_button.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {

                Intent intent = new Intent(getApplicationContext(), SecondActivity.class);
                intent.putExtra("message1", send_name.getText().toString());
                intent.putExtra("message2", send_usn.getText().toString());

                int selectedid = radioGroup.getCheckedRadioButtonId();
                RadioButton sendRadioButton = (RadioButton) findViewById(selectedid);

                String st2 = sendRadioButton.getText().toString();
                intent.putExtra("message3", st2);
                startActivity(intent);
            }
        });
    }
}


SecondActivity.java



package com.example.app9;

import android.content.Intent;
import android.app.Activity;
import android.os.Bundle;
import android.widget.TextView;

public class SecondActivity extends Activity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.second_activity);

        TextView reciever_name = (TextView) findViewById(R.id.name1);
        TextView reciever_usn = (TextView) findViewById(R.id.usn1);
        TextView reciever_sem = (TextView) findViewById(R.id.sem1);

        Intent intent = getIntent();

        String s1 = "Your name is ";
        String str1 = s1.concat(intent.getStringExtra("message1"));
        reciever_name.setText(str1);

        String s2 = "Your usn is ";
        String str2 = s2.concat(intent.getStringExtra("message2"));
        reciever_usn.setText(str2);

        String s3 = "You are studying in the semester ";
        String str3 = s3.concat(intent.getStringExtra("message3"));
        reciever_sem.setText(str3);
    }
}



AndroidManifest.xml



<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app9">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App9">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondActivity"/>
    </application>

</manifest>



